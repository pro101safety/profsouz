<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/fpb_blue_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/contacts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_contacts_title"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@color/fpb_blue" />

        <TextView
            android:id="@+id/contacts_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autoLink="phone|email|map"
            android:linksClickable="true"
            android:text="@string/drawer_contacts_body"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColorLink="@color/fpb_blue"
            android:textColor="@color/fpb_on_surface" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
